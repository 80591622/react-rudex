{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx", // 支持新的 React JSX 转换
    "strict": true, // 启用严格模式
    "esModuleInterop": true, // 支持 CommonJS 和 ES 模块互操作
    "skipLibCheck": true, // 跳过库类型检查，加快构建速度
    "forceConsistentCasingInFileNames": true, // 文件名大小写一致性
    "moduleResolution": "node", // 使用 Node 的模块解析
    "baseUrl": "./", // 设置基础路径
    "paths": {
      "@/*": ["src/*"], // 配置路径别名
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"], // 包含的文件夹
  "exclude": ["node_modules", "dist"] // 排除的文件夹
}